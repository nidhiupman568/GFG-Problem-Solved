class Solution {
  public:
    void nearlySorted(vector<int>& arr, int k) {
         priority_queue<int,vector<int>,greater<int>> minh;
         int idx=0;
        for(int i=0; i<arr.size(); i++){
            minh.push(arr[i]);
            if(minh.size()>k){
                arr[idx++]= minh.top(); 
                minh.pop();
            }
        }
        while(minh.size()>0){
            arr[idx++]= minh.top();
            minh.pop();
        }
       
    }
};
