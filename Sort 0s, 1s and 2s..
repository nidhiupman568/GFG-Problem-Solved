class Solution {
  public:
    void sort012(vector<int>& arr) {
        // code here
        int l = 0;
       int r = arr.size()-1;
       int m = 0;
       
       while(r>=l && l<=r && m<=r){
           
           if(m<l)m=l;
           else if(arr[m]==0){
               swap(arr[m],arr[l]);
               l++;
           }
           else if(arr[m]==2){
               swap(arr[m],arr[r]);
               r--;
           }
           else{
               m++;
           }
       }
       
       return;
       
    }
};
