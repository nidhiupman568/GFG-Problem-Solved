class Solution {
public:
    void zigZag(vector<int> &arr) {
       int count = 1;
       for(int i = 0;i<arr.size()-1;i++){
           if(count%2 != 0){
               if(arr[i]>arr[i+1]){
                  swap(arr[i],arr[i+1]);
               }
           }
           else{
               if(arr[i]<arr[i+1]){
                   swap(arr[i],arr[i+1]);
               }
           }
           count++;
       } 
  }
};
